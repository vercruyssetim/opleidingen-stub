VERSION_NUMBER = "0.0.0"

JENKINS_GRADLE_NAME = "opleidingen_maven"

TEST_SERVER_USERNAME = env.TEST_SERVER_USERNAME
TEST_SERVER_URL = env.TEST_SERVER_URL

try {
    stage("pre-steps") {
        node("linux && docker") {
            cleanWorkspace()
            cloneProject()
            buildMavenImage()
        }
    }
    stage("build") {
        node("linux && docker") {
            runCiTests()
            archiveAllTestResults()
        }
    }
    stage("deploy") {
        node("linux && docker") {
            maven("clean install -DskipFrontendPlugin -DskipTests")
        }
    }
    stage("deploy to Test") {
        milestone 1
        askForDeploy('Deploy to Test?')
        milestone 2
        node("linux && docker") {
            stopServer(TEST_SERVER_USERNAME, TEST_SERVER_URL)
            copyJar(TEST_SERVER_USERNAME, TEST_SERVER_URL)
            startServer(TEST_SERVER_USERNAME, TEST_SERVER_URL)
        }
    }
} catch (org.jenkinsci.plugins.workflow.steps.FlowInterruptedException exception) {
    return
}

def cleanWorkspace() {
    sh "mkdir ~/.tmp/${env.BUILD_TAG}"
    try {
        sh "mv spring/src/main/resources/ui/node_modules ~/.tmp/${env.BUILD_TAG}/node_modules"
        sh "mv spring/src/main/resources/ui/yarn.lock ~/.tmp/${env.BUILD_TAG}/yarn.lock"
    } catch (err) {
    }
    sh "rm -rf spring/*"
    try {
        sh "mkdir -p spring/src/main/resources/ui/src"
        sh "mv ~/.tmp/${env.BUILD_TAG}/node_modules/ spring/src/main/resources/ui/node_modules"
        sh "mv ~/.tmp/${env.BUILD_TAG}/yarn.lock spring/src/main/resources/ui/yarn.lock"
    } catch (err) {
    }
    sh "rm -rf ~/.tmp/${env.BUILD_TAG}"
}

def cloneProject() {
    checkout scm
}

def buildMavenImage() {
    sh "docker build -t opleidingen/maven spring/ "
}

def runCiTests() {
    maven("test -Dmaven.test.failure.ignore=true")
}

def archiveAllTestResults() {
    step([$class: "JUnitResultArchiver", testResults: "mentor-server/target/surefire-reports/TEST-*.xml"])
}

def askForDeploy(message) {
    timeout(time: 28, unit: 'DAYS') {
        input message: "${message}"
    }
}

def copyJar(username, host) {
    sh "scp spring/target/mentor-server-${VERSION_NUMBER}.jar ${username}@${host}:opleidingen/server/mentor-server.jar"
}

def startServer(username, host) {
    sh "ssh ${username}@${host} opleidingen/server/startMentorServer.sh"
}

def stopServer(username, host) {
    try {
        sh "ssh ${username}@${host} opleidingen/server/stopMentorServer.sh"
    } catch (err) {
        printError(err)
    }
}

def maven(task) {
    def mavenName = "${JENKINS_GRADLE_NAME}.${VERSION_NUMBER}"

    try {
        startMavenContainer(mavenName)
        execMaven(mavenName, task)
    } catch (err) {
        printError(err)
        currentBuild.result = "FAILURE"
    } finally {
        removeContainer(mavenName)
    }
}

def startMavenContainer(mavenName) {
    def currentDir = pwd()
    killContainer(mavenName)
    sh "docker run -t -d --name ${mavenName} -v $currentDir/spring:/usr/src/opleidingen -v /usr/maven/.m2/repository:/usr/maven/.m2/repository opleidingen/maven bash"
}
def execMaven(mavenName, task) {
    sh "docker exec ${mavenName} mvn  ${task}"
}

def killContainer(name) {
    try {
        sh "docker rm -vf ${name}"
    } catch (err) {
    }
}

def removeContainer(name) {
    try {
        sh "docker stop ${name}"
    } catch (err) {
    }
    try {
        sh "docker rm -v ${name}"
    } catch (err) {
    }
}

def printError(error) {
    println "******************************* WORKFLOW ERROR *******************************"
    println "${error}"
    println "******************************************************************************"
}